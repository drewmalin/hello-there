CC      := clang++
CFLAGS  := -Wall -Wextra -std=c++20 -pedantic
LDFLAGS := 

.DEFAULT_GOAL: all


###
# Targets:
###

all: bin/main.out

bin/main.out : obj/main.o obj/geometry/point.o
	@mkdir -p bin
	${CC} ${LDFLAGS} -o bin/main.out obj/main.o obj/geometry/point.o

###
# Intermediary objects:
###

obj/main.o : src/main.cpp include/geometry/point.h
	@mkdir -p $(dir obj/main.o)
	${CC} ${CFLAGS} -Iinclude -c src/main.cpp -o obj/main.o

obj/geometry/point.o : src/geometry/point.cpp include/geometry/point.h
	@mkdir -p $(dir obj/geometry/point.o)
	${CC} ${CFLAGS} -Iinclude -c src/geometry/point.cpp -o obj/geometry/point.o

###
# Phony targets:
###

.PHONY : clean
clean :
	rm -rf obj

.PHONY : purge
purge : clean
	rm -rf bin
